# GNU Make workspace makefile autogenerated by Premake

ifndef config
  config=debug
endif

ifndef verbose
  SILENT = @
endif

ifeq ($(config),debug)
  tobas_sp_config = debug
  tobas_config = debug
  tobas_server_config = debug

else ifeq ($(config),release)
  tobas_sp_config = release
  tobas_config = release
  tobas_server_config = release

else
  $(error "invalid configuration $(config)")
endif

PROJECTS := tobas_sp tobas tobas_server

.PHONY: all clean help $(PROJECTS) 

all: $(PROJECTS)

tobas_sp:
ifneq (,$(tobas_sp_config))
	@echo "==== Building tobas_sp ($(tobas_sp_config)) ===="
	@${MAKE} --no-print-directory -C . -f tobas_sp.make config=$(tobas_sp_config)
endif

tobas:
ifneq (,$(tobas_config))
	@echo "==== Building tobas ($(tobas_config)) ===="
	@${MAKE} --no-print-directory -C . -f tobas.make config=$(tobas_config)
endif

tobas_server:
ifneq (,$(tobas_server_config))
	@echo "==== Building tobas_server ($(tobas_server_config)) ===="
	@${MAKE} --no-print-directory -C . -f tobas_server.make config=$(tobas_server_config)
endif

clean:
	@${MAKE} --no-print-directory -C . -f tobas_sp.make clean
	@${MAKE} --no-print-directory -C . -f tobas.make clean
	@${MAKE} --no-print-directory -C . -f tobas_server.make clean

help:
	@echo "Usage: make [config=name] [target]"
	@echo ""
	@echo "CONFIGURATIONS:"
	@echo "  debug"
	@echo "  release"
	@echo ""
	@echo "TARGETS:"
	@echo "   all (default)"
	@echo "   clean"
	@echo "   tobas_sp"
	@echo "   tobas"
	@echo "   tobas_server"
	@echo ""
	@echo "For more information, see https://github.com/premake/premake-core/wiki"